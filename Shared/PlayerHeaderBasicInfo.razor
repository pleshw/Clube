@using Clube.Models.RPG

<div class="row justify-content-around align-items-center py-3">
    <div class="col-3 mx-3 border border-dark shadow rounded row justify-content-center align-items-center p-0" style="width: 140px; height: 140px;">
        <div class="col-12 p-0 h-100">
            <img class="img-fluid rounded p-0 h-100" src="@(string.IsNullOrEmpty(Player.Profile.Image) ? "https://i.imgur.com/JrpD6jf.jpeg" : Player.Profile.Image)" />
        </div>
    </div>
    <div class="gap-3 col-8 h-50 py-3 px-0 row text-center justify-content-center">
        <div class="col-11 col-md-5">
            <PlayerHeaderBasicInfoField Title="Nome" Value="@Player.Profile.Name"></PlayerHeaderBasicInfoField>
        </div>
        <div class="col-11 col-md-5">
            <PlayerHeaderBasicInfoField Title="Classe" Value="@Player.Lore.Class"></PlayerHeaderBasicInfoField>
        </div>
        <div class="col-6 col-md-5">
            <PlayerHeaderBasicInfoField Title="Raça" Value="@Player.Lore.Race"></PlayerHeaderBasicInfoField>
        </div>
        <div class="col-4 col-md-5">
            <PlayerHeaderBasicInfoField Title="Idade" Value="@Player.Bio.Age.ToString()"></PlayerHeaderBasicInfoField>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public required Player Player { get; set; }
}
